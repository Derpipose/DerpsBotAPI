<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DerpsBotMaui.MainPage">



    <Grid
        ColumnDefinitions="*,*,*,*,*,*"
        RowDefinitions="*,*,*,*,*">
        <Button 
            Text="Up Left"
            Grid.Row="0"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="5"
            BackgroundColor="#c3e2fa"
            TextColor="black"
            Command="{Binding UpLeftCommand}"/>
        <Button 
            Text="Up Right"
            Grid.Row="0"
            Grid.Column="3"
            Grid.ColumnSpan="2"
            Margin="5"
            BackgroundColor="#c3e2fa"
            TextColor="black"
            Command="{Binding UpRightCommand}"/>

        <!--<Button 
            Text="Turtle"
            Grid.Row="0"
            Grid.Column="0"
            Margin="5"
            BackgroundColor="#c3e2fa"
            TextColor="black"/>
        <Button 
            Text="Run and Gun"
            Grid.Row="0"
            Grid.Column="5"
            Margin="5"
            BackgroundColor="#c3e2fa"
            TextColor="black"/>-->


        <Button 
            Text="Left"
            Grid.Row="1"
            Grid.Column="0"
            Grid.RowSpan="2"
            Margin="5"
            BackgroundColor="#c3e2fa"
            TextColor="black"
            Command="{Binding LeftCommand}"/>
        <Button 
            Text="STOP"
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="4"
            Grid.RowSpan="2"
            Margin="5"
            BackgroundColor="#c3e2fa"
            TextColor="black"
            Command="{Binding StopCommand}"/>
        <Button 
            Text="Right"
            Grid.Row="1"
            Grid.Column="5"
            Grid.RowSpan="2"
            Margin="5"
            BackgroundColor="#c3e2fa"
            TextColor="black"
            Command="{Binding RightCommand}"/>


        <Button 
            Text="Down Left"
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="5"
            BackgroundColor="#c3e2fa"
            TextColor="black"
            Command="{Binding DownLeftCommand}"/>
        <Button 
            Text="Down Right"
            Grid.Row="3"
            Grid.Column="3"
            Grid.ColumnSpan="2"
            Margin="5"
            BackgroundColor="#c3e2fa"
            TextColor="black"
            Command="{Binding DownRightCommand}"/>

        <Button 
            Text="Corner"
            Grid.Row="3"
            Grid.Column="5"
            Margin="5"
            BackgroundColor="#c3e2fa"
            TextColor="black"
            Command="{Binding CornerCommand}"/>
        
        

        <HorizontalStackLayout Spacing="10"
                       Grid.Row="4"
                       Grid.Column="0"
                       Grid.ColumnSpan="6"
                       Padding="10">
            <Label Text="Select Server:" VerticalOptions="Center"/>
            <StackLayout>
                <BindableLayout.ItemsSource>
                    <Binding Path="ServersList"/>
                </BindableLayout.ItemsSource>
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <RadioButton 
                            Content="{Binding Nickname}" 
                            IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                            GroupName="ServerGroup"
                            CheckedChanged="OnServerSelected"/>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>
            <Entry x:Name="ServerNicknameEntry"
               Placeholder="Nickname"
               WidthRequest="100"
               Text="{Binding NewServerNickname, Mode=TwoWay}"/>
            <Entry x:Name="ServerUrlEntry"
               Placeholder="Server URL"
               WidthRequest="200"
               Text="{Binding NewServerUrl, Mode=TwoWay}"/>
            <Button Text="Add Server"
                Command="{Binding AddServerCommand}"/>
        </HorizontalStackLayout>

    </Grid>

</ContentPage>
